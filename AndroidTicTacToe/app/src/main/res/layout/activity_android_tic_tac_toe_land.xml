<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="#000">

    <amaturehour.androidtictactoe.BoardView
        android:id="@+id/board"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/information"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="info"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#888"/>

        <TextView
            android:id="@+id/human_score_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Human:"
            android:textSize="20sp"
            android:textColor="#888"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/human_score"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#888"
            android:layout_toRightOf="@id/human_score_text"
            android:layout_marginTop="75dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/ties_score_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Ties:"
            android:textSize="20sp"
            android:textColor="#888"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/human_score"/>

        <TextView
            android:id="@+id/ties_score"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#888"
            android:layout_toRightOf="@id/ties_score_text"
            android:layout_below="@id/human_score"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:id="@+id/android_score_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Android:"
            android:textSize="20sp"
            android:textColor="#888"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/ties_score_text"/>

        <TextView
            android:id="@+id/android_score"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#888"
            android:layout_toRightOf="@id/android_score_text"
            android:layout_below="@id/ties_score"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="100dp"/>

    </RelativeLayout>
</LinearLayout>
